<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/container_horizontal_margin"
    android:layout_marginEnd="@dimen/container_horizontal_margin">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_list"
        android:name="com.Lily.seasoningpopcornwithyourtears.RecipeListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:spanCount="3"
        app:layoutManager="GridLayoutManager"
        tools:context="com.Lily.seasoningpopcornwithyourtears.RecipeDetailHostActivity"
        tools:listitem="@layout/recipe_list_content" />

</androidx.constraintlayout.widget.ConstraintLayout>